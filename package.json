{
  "name": "amazon-ivs-real-time-collaboration-web-demo",
  "version": "0.0.1",
  "description": "Amazon Interactive Video Service Real-time Collaboration Web Demo",
  "private": true,
  "type": "module",
  "scripts": {
    "start": "vite",
    "prebuild": "npx concurrently --kill-others-on-fail npm:build:*",
    "build": "vite build --mode $APP_ENV",
    "build:sounds": "tsx scripts/generateSoundsSprite.ts",
    "build:version": "tsx scripts/generateBuildVersion.ts",
    "rotateKeyPair": "tsx scripts/rotateKeyPair.ts",
    "preview": "vite preview --config vite.config.preview.ts",
    "prepare": "husky",
    "codegen": "graphql-codegen --config codegen.config.ts",
    "prelint": "prettier --check .",
    "lint": "npx concurrently npm:tsc:* npm:eslint",
    "prelint:fix": "prettier --write .",
    "lint:fix": "npx concurrently npm:tsc:* npm:eslint:fix",
    "tsc:web": "tsc",
    "tsc:infra": "tsc --project infra",
    "eslint": "eslint --ext .js,.jsx,.ts,.tsx,.json --max-warnings=0 --report-unused-disable-directives",
    "eslint:fix": "npm run eslint -- --fix",
    "deploy:init": "npx concurrently --kill-others-on-fail \"npm ci\" \"npm ci --prefix infra\" && npm run deploy:bootstrap",
    "deploy:bootstrap": "npm run bootstrap --prefix infra",
    "predeploy:website": "npm run build",
    "deploy:website": "npm run deploy --prefix infra -- -c stackType=website",
    "deploy:website:dev": "APP_ENV=development npm run deploy:website",
    "deploy:website:prod": "APP_ENV=production npm run deploy:website",
    "deploy:website:staging": "APP_ENV=staging npm run deploy:website",
    "deploy:website:test": "APP_ENV=test npm run deploy:website",
    "deploy:backend": "npm run deploy --prefix infra -- -c stackType=backend",
    "deploy:backend:dev": "APP_ENV=development npm run deploy:backend",
    "deploy:backend:prod": "APP_ENV=production npm run deploy:backend",
    "deploy:backend:staging": "APP_ENV=staging npm run deploy:backend",
    "deploy:backend:test": "APP_ENV=test npm run deploy:backend",
    "destroy:backend": "npm run destroy --prefix infra -- -c stackType=backend",
    "destroy:website": "npm run destroy --prefix infra -- -c stackType=website",
    "clean": "rm -rf build dist infra/dist infra/cdk.out buildVersion.txt"
  },
  "dependencies": {
    "@headlessui/react": "2.1.2",
    "amazon-ivs-chat-messaging": "^1.1.1",
    "amazon-ivs-web-broadcast": "^1.15.0",
    "aws-amplify": "^6.5.0",
    "axios": "^1.7.4",
    "boring-avatars": "^1.10.2",
    "copy-to-clipboard": "^3.3.3",
    "fast-equals": "^5.0.1",
    "fast-memoize": "^2.5.2",
    "howler": "^2.2.4",
    "jwt-decode": "^4.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-markdown": "^9.0.1",
    "react-resize-detector": "^11.0.1",
    "react-router-dom": "^6.26.1",
    "react-textarea-autosize": "^8.5.3",
    "react-wrap-balancer": "^1.1.1",
    "swr": "^2.2.4"
  },
  "devDependencies": {
    "@aws-sdk/client-cloudformation": "^3.631.0",
    "@aws-sdk/client-lambda": "^3.631.0",
    "@aws-sdk/credential-providers": "^3.631.0",
    "@graphql-codegen/cli": "^5.0.2",
    "@graphql-codegen/client-preset": "^4.3.3",
    "@graphql-codegen/typescript": "^4.0.9",
    "@tailwindcss/container-queries": "^0.1.1",
    "@types/howler": "^2.2.9",
    "@types/node": "^22.3.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.2.25",
    "@typescript-eslint/eslint-plugin": "^7.17.0",
    "@typescript-eslint/parser": "^7.17.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.0.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-json": "^3.1.0",
    "eslint-plugin-jsx-a11y": "^6.9.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^7.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "ffmpeg-static": "^5.2.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.9",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^3.4.10",
    "tsx": "^4.17.0",
    "typescript": "^5.5.4",
    "vite": "^5.4.1",
    "vite-plugin-checker": "^0.7.2",
    "vite-plugin-environment": "^1.1.3",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-minify": "^2.0.0",
    "vite-plugin-svgr": "^4.1.0",
    "vite-tsconfig-paths": "^5.0.1",
    "wav-file-info": "^0.0.10"
  },
  "optionalDependencies": {
    "@rollup/rollup-linux-x64-gnu": "^4.9.6"
  },
  "browserslist": {
    "development": [
      "last 1 Chrome version",
      "last 1 Firefox version",
      "last 1 Edge version",
      "last 1 Safari version"
    ],
    "production": [
      "last 1 Chrome major versions",
      "last 1 Firefox major versions",
      "last 1 Edge major versions",
      "last 1 Safari major versions"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --max-warnings=0 --report-unused-disable-directives --fix",
    "*.{yml,yaml,md}": "prettier --write",
    "*.css": "prettier --write --parser=css",
    "!(package|tsconfig|cdk)*.json": [
      "eslint --max-warnings=0 --fix",
      "prettier --write"
    ]
  }
}
